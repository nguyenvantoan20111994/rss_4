<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/header_splash_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_header_splash_img"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_voice_of_america" />

    <ImageView
        android:id="@+id/footer_splash_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_footer_splash_img"
        android:layout_alignParentBottom="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_breaking_news" />
</RelativeLayout>